generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Authentication ─────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  password      String? // bcrypt hash
  image         String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts    Account[]
  sessions    Session[]
  reports     Report[]
  teamMembers TeamMember[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Teams ──────────────────────────────────────────────────

model Team {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members TeamMember[]
  reports Report[]

  @@index([slug])
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  role      TeamRole @default(MEMBER)
  createdAt DateTime @default(now())

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([userId])
  @@index([teamId])
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
}

// ─── Reports ────────────────────────────────────────────────

model Report {
  id     String  @id @default(cuid())
  userId String
  teamId String?

  // Metadata
  reportName  String
  searchTopic String @db.Text

  // Job state
  status   ReportStatus @default(QUEUED)
  stage    String       @default("queued")
  progress Int          @default(0)
  detail   String       @default("")
  error    String?

  // Research configuration
  depth            ResearchDepth @default(STANDARD)
  estimatedMinutes Int           @default(25)

  // Report content
  reportHtml  String? @db.Text
  contextJson String? @db.Text

  // Denormalized scores for dashboard queries
  overallScore     Float?
  recommendation   String? // GO, NO-GO, CONDITIONAL
  marketScore      Float?
  competitionScore Float?
  costScore        Float?
  productScore     Float?
  financialScore   Float?

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?

  // Email tracking
  emailSent   Boolean   @default(false)
  emailSentAt DateTime?

  // Relations
  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  team Team? @relation(fields: [teamId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt(sort: Desc)])
  @@index([teamId, createdAt(sort: Desc)])
  @@index([status])
}

enum ReportStatus {
  QUEUED
  RUNNING
  COMPLETED
  FAILED
}

enum ResearchDepth {
  QUICK    // ~5 min: 1 research round
  STANDARD // ~25 min: 3 research rounds
  DEEP     // ~45 min: 5 research rounds
}

// ─── Innovation Lab ─────────────────────────────────────────

model LabIdea {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  category    String
  votes       Int          @default(0)
  status      String       // concept | building | beta
  url         String?
  iconName    String
  waitlist    LabWaitlist[]

  @@map("lab_ideas")
}

model LabWaitlist {
  id          Int       @id @default(autoincrement())
  email       String
  ideaId      Int?
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  utmContent  String?
  utmTerm     String?
  createdAt   DateTime  @default(now())
  idea        LabIdea?  @relation(fields: [ideaId], references: [id], onDelete: SetNull)

  @@index([createdAt(sort: Desc)])
  @@map("lab_waitlist")
}

model LabSetting {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String

  @@map("lab_settings")
}
